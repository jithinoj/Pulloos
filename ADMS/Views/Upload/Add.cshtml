@model ADMS.ViewModel.UploadViewModel

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add</h2>

@using (Html.BeginForm("Add", "Upload", FormMethod.Post, new { enctype="multipart/form-data"}))
{
    

    <div class="form-horizontal">
        <h4>UploadViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        
        <input type="hidden" name="PostId" value="@Model.PostId" />

        <div class="form-group">
            <label class="control-label col-md-2">Select Files</label>
            <div class="col-md-10">
                <input type="file" id="Files" multiple name="Files" class="form-control input-field" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />

                @Html.ActionLink("Back to List", "Index", "Posts", new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

